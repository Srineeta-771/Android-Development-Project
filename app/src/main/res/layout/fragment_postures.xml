<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Postures">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/isirsasana"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/headstand"
                android:contentDescription="@string/todo"/>

            <Button
                android:id="@+id/bsirsasana"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="head stand"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imountain"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/mountain" />

            <Button
                android:id="@+id/bmountain"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="Mountain pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/itree"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/tree" />

            <Button
                android:id="@+id/btree"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="tree pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/irevprayer"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/revprayer" />

            <Button
                android:id="@+id/brevprayer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="reverse prayer pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icobra"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/cobra" />

            <Button
                android:id="@+id/bcobra"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="Cobra pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iplow"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/plow" />

            <Button
                android:id="@+id/bplow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="plow pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/ishoulder"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/shoulder" />

            <Button
                android:id="@+id/bshoulder"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="Shoulder stand"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icamel"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/camel" />

            <Button
                android:id="@+id/bcamel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="Camel pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/ibridge"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/bridge" />

            <Button
                android:id="@+id/bbridge"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="Bridge pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/inatraj"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/natraj" />

            <Button
                android:id="@+id/bnatraj"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="natraj pose"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/isunsalute"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/sunsalute" />

            <Button
                android:id="@+id/bsunsalute"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:layout_marginTop="130dp"
                android:text="sun salute"
                android:background="@color/yellow"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
